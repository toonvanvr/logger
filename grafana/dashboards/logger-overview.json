{
  "uid": "logger-overview",
  "title": "Logger Overview",
  "tags": ["logger"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Log Volume by App",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (app) (count_over_time({environment=~\".+\"} [1m]))",
          "legendFormat": "{{app}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "stacking": { "mode": "normal" },
            "fillOpacity": 50
          },
          "unit": "short"
        }
      },
      "options": {
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 2,
      "title": "Log Volume by Severity",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (severity) (count_over_time({environment=~\".+\"} [1m]))",
          "legendFormat": "{{severity}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "bars",
            "stacking": { "mode": "normal" },
            "fillOpacity": 50
          },
          "unit": "short"
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "error" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "warning" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "info" },
            "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "debug" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "tooltip": { "mode": "multi" }
      }
    },
    {
      "id": 3,
      "title": "Recent Errors",
      "type": "table",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "refId": "A",
          "expr": "{severity=\"error\"} | json | line_format \"{{.message}}\"",
          "maxLines": 100
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "Time", "desc": true }]
      },
      "transformations": [
        {
          "id": "extractFields",
          "options": {
            "source": "Line",
            "format": "json"
          }
        }
      ]
    },
    {
      "id": 4,
      "title": "Active Sessions",
      "type": "table",
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 18 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (app, session) (count_over_time({environment=~\".+\"} | session != \"\" [5m]))",
          "instant": true
        }
      ],
      "options": {
        "showHeader": true,
        "sortBy": [{ "displayName": "Value", "desc": true }]
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
