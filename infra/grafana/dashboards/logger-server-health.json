{
  "uid": "logger-server-health",
  "title": "Logger Server Health",
  "tags": ["logger"],
  "timezone": "browser",
  "refresh": "10s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Log Ingestion Rate",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 0 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(count_over_time({environment=~\".+\"} [1m]))",
          "legendFormat": "Logs / min"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "fillOpacity": 30,
            "gradientMode": "scheme",
            "lineWidth": 2,
            "pointSize": 5
          },
          "unit": "short",
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 2,
      "title": "Severity Distribution",
      "type": "piechart",
      "gridPos": { "h": 10, "w": 12, "x": 0, "y": 8 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (severity) (count_over_time({environment=~\".+\"} [1h]))",
          "instant": true,
          "legendFormat": "{{severity}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "error" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "warning" },
            "properties": [{ "id": "color", "value": { "fixedColor": "orange", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "info" },
            "properties": [{ "id": "color", "value": { "fixedColor": "blue", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "debug" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "trace" },
            "properties": [{ "id": "color", "value": { "fixedColor": "purple", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "donut",
        "tooltip": { "mode": "single" }
      }
    },
    {
      "id": 3,
      "title": "App Distribution",
      "type": "piechart",
      "gridPos": { "h": 10, "w": 12, "x": 12, "y": 8 },
      "datasource": { "type": "loki", "uid": "" },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (app) (count_over_time({environment=~\".+\"} [1h]))",
          "instant": true,
          "legendFormat": "{{app}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": ["value", "percent"]
        },
        "pieType": "donut",
        "tooltip": { "mode": "single" }
      }
    }
  ],
  "schemaVersion": 39,
  "version": 1
}
